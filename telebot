@bot.message_handler(commands=['start'])


#реакция на start
def start_message(message):
    bot.send_message(message.chat.id, 'Слушаю и повинуюсь', reply_markup=keyboard1)

@bot.message_handler(content_types=['text'])
def send_text(message):
    if message.text.lower() == 'включить':
          p.set_state(brightness='0.99')
          a = 1,
          print(datetime.datetime.now(),a)
          bot.send_message(message.chat.id, 'готово')

    elif message.text.lower() == 'выключить':
        p.set_state(brightness='0.00')
        a = 2,
        print(datetime.datetime.now(), a)
        bot.send_message(message.chat.id, 'готово')
bot.polling() #чтобы бот сразу не выключался-бесконечный

